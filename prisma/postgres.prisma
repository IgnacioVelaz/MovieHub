generator client {
    provider = "prisma-client-js"
    output   = "./generated/postgres_client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URI")
}

model User {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    email     String   @unique
    name      String
    movies    Movies[]

    @@map("users")
}

model Movies {
    id             Int      @id @default(autoincrement())
    tmdb_id        Int
    name           String   @unique
    poster_image   String
    score          Float
    createdAt      DateTime @default(now())
    updatedAt      DateTime @updatedAt
    tmdb_genresIds Int[]
    genres         Genres[]
    user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId         Int
    type           String

    @@map("movies")
}

model Genres {
    id      Int      @id @default(autoincrement())
    tmdb_id Int
    name    String
    movies  Movies[]

    @@map("genres")
}
